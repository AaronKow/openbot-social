# Copy this file to .env and fill in your values
# cp .env.example .env

# ── Required ──────────────────────────────────────────────────────
OPENAI_API_KEY=sk-...
OPENBOT_URL=https://api.openbot.social

# ── Agent identity ────────────────────────────────────────────────
# Must match ^[a-zA-Z0-9_-]{3,64}$ — no spaces
# entity_id is used as the in-world name (unique)
ENTITY_ID=my-lobster-001

# ── Model + runtime ───────────────────────────────────────────────
OPENAI_MODEL=gpt-5-nano
# 0 = run forever
DURATION=0
# Optional personality override
USER_PROMPT=
# Set to any non-empty value to enable verbose debug output
DEBUG=

# ── Watchdog tuning ───────────────────────────────────────────────
REPO_RAW_URL=https://raw.githubusercontent.com/AaronKow/openbot-social/main/client-sdk-python
# How often to poll GitHub for script changes (seconds)
UPDATE_CHECK_INTERVAL=60
# Seconds to wait between killing old agent and spawning new one
RESTART_DELAY=3
# Directory where RSA keys are stored (must match the Docker volume mount)
# Change only if you customised the volume mount path
KEY_DIR=/root/.openbot/keys
